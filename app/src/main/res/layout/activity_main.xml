<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/background_design"
    android:id="@+id/drawer_layoutId"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="20dp">

                <Button
                    android:id="@+id/checkId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="20dp"
                    android:layout_margin="10dp"
                    android:textAllCaps="false"
                    android:background="@drawable/button_shape"
                    android:text="Check"/>

                <Button
                    android:id="@+id/singInOrSingUpButtonId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="20dp"
                    android:layout_margin="10dp"
                    android:textAllCaps="false"
                    android:background="@drawable/button_shape"
                    android:text="SingIn or SingUp"/>

                <Button
                    android:id="@+id/sqliteButtonId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="20dp"
                    android:layout_margin="10dp"
                    android:textAllCaps="false"
                    android:background="@drawable/button_shape"
                    android:text="SQLite Button"/>

                <Button
                    android:id="@+id/customListViewButtonId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="20dp"
                    android:layout_margin="10dp"
                    android:textAllCaps="false"
                    android:background="@drawable/button_shape"
                    android:text="Custom LIstView Button"/>


                <Button
                    android:id="@+id/listViewButtonId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="20dp"
                    android:layout_margin="10dp"
                    android:textAllCaps="false"
                    android:background="@drawable/button_shape"
                    android:text="LIstView Button"/>

               
                <Button
                    android:id="@+id/cardViewButtonId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="20dp"
                    android:layout_margin="10dp"
                    android:textAllCaps="false"
                    android:background="@drawable/button_shape"
                    android:text="CardView Button"/>

                <Button
                    android:id="@+id/imageViewButtonId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="20dp"
                    android:layout_margin="10dp"
                    android:textAllCaps="false"
                    android:background="@drawable/button_shape"
                    android:text="Image View Button"/>
                <Button
                    android:id="@+id/luduButtonId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="20dp"
                    android:layout_margin="10dp"
                    android:textAllCaps="false"
                    android:background="@drawable/button_shape"
                    android:text="Ludu Button"/>

                <Button
                    android:id="@+id/rotationButtonId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="20dp"
                    android:layout_margin="10dp"
                    android:textAllCaps="false"
                    android:background="@drawable/button_shape"
                    android:text="Rotation"/>

                <Button
                    android:id="@+id/animationButtonId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="20dp"
                    android:layout_margin="10dp"
                    android:textAllCaps="false"
                    android:background="@drawable/button_shape"
                    android:text="Animation"/>
                <Button
                    android:id="@+id/autoLinkId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="20dp"
                    android:layout_margin="10dp"
                    android:textAllCaps="false"
                    android:background="@drawable/button_shape"
                    android:text="Auto Link"/>

                <Button
                    android:id="@+id/extraButtonId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="20dp"
                    android:layout_margin="10dp"
                    android:textAllCaps="false"
                    android:background="@drawable/button_shape"
                    android:text="Extra"/>

            </LinearLayout>
        </ScrollView>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white">

        <include
            layout="@layout/drawr_layout"/>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>